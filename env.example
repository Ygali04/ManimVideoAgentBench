# OpenRouter (recommended default)
# - OPENROUTER_API_KEY is required for OpenRouter-first mode.
# - OPENROUTER_SITE_URL / OPENROUTER_APP_NAME are optional but recommended by OpenRouter
#   for attribution / rate-limit policy.
OPENROUTER_API_KEY=""
OPENROUTER_API_BASE="https://openrouter.ai/api/v1"
OPENROUTER_SITE_URL=""
OPENROUTER_APP_NAME="TheoremExplainAgent"

# Provider selection
# Options: openrouter | litellm
TEA_PROVIDER="openrouter"

# OpenAI (optional fallback if not using OpenRouter)
OPENAI_API_KEY=""

# Azure OpenAI (optional)
AZURE_API_KEY=""
AZURE_API_BASE=""
AZURE_API_VERSION=""

# Google Vertex AI (optional)
VERTEXAI_PROJECT=""
VERTEXAI_LOCATION=""
GOOGLE_APPLICATION_CREDENTIALS=""

# Google Gemini (optional)
GEMINI_API_KEY=""
GOOGLE_API_KEY=""

# Langfuse (optional)
LANGFUSE_PUBLIC_KEY=""
LANGFUSE_SECRET_KEY=""
LANGFUSE_HOST=""

# Kokoro TTS Settings (optional, only if using TTS)
KOKORO_MODEL_PATH="models/kokoro-v0_19.onnx"
KOKORO_VOICES_PATH="models/voices.bin"
KOKORO_DEFAULT_VOICE="af"
KOKORO_DEFAULT_SPEED="1.0"
KOKORO_DEFAULT_LANG="en-us"


